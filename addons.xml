<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>

  <addon id="repository.ontv"
         name="OnTV Repository"
         version="1.0.0"
         provider-name="OnTV">
    <requires>
      <import addon="xbmc.addon" version="12.0.0"/>
    </requires>
    <extension point="xbmc.addon.repository" name="OnTV Repository">
      <dir>
        <info compressed="false">https://raw.githubusercontent.com/nnllv0id/ontv-repo/main/addons.xml</info>
        <checksum>https://raw.githubusercontent.com/nnllv0id/ontv-repo/main/addons.xml.md5</checksum>
        <datadir zip="true">https://raw.githubusercontent.com/nnllv0id/ontv-repo/main</datadir>
      </dir>
    </extension>
    <extension point="xbmc.addon.metadata">
      <platform>all</platform>
      <summary lang="en">OnTV Repository</summary>
      <description lang="en">Official OnTV Repository</description>
    </extension>
  </addon>

  <addon id="plugin.video.ontv"
         name="OnTV"
         version="1.0.0"
         provider-name="OnTV">
    <requires>
      <import addon="xbmc.python" version="3.0.0"/>
      <import addon="xbmc.addon" version="12.0.0"/>
      <import addon="plugin.video.f4mTester" version="4.1.3"/>
    </requires>
    <extension point="xbmc.python.pluginsource" library="default.py">
      <provides>video</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
      <platform>all</platform>
      <summary lang="en">OnTV - IPTV Portal</summary>
      <description lang="en">IPTV portal with multiple M3U servers. Requires F4mTester.</description>
      <assets>
        <icon>icon.png</icon>
        <fanart>fanart.jpg</fanart>
      </assets>
    </extension>
  </addon>

  <addon id="plugin.video.f4mTester"
         name="f4mTester"
         version="4.1.3"
         provider-name="Equipe Oneplay e Tiago">
    <requires>
      <import addon="xbmc.python" version="3.0.0"/>
      <import addon="script.module.six"/>
      <import addon="script.module.kodi-six"/>
      <import addon="script.module.requests"/>
      <import addon="script.video.F4mProxy" version="4.0.9"/>
      <import addon="inputstream.ffmpegdirect"/>
    </requires>
    <extension point="xbmc.python.pluginsource" library="default.py">
      <provides>video</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
      <platform>all</platform>
      <summary lang="en">f4mTester</summary>
      <description lang="en">F4m stream tester and player.</description>
      <assets>
        <icon>icon.png</icon>
      </assets>
    </extension>
  </addon>

</addons>
