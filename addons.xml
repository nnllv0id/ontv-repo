<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>

  <addon id="repository.ontv" name="OnTV Repository" version="1.0.1" provider-name="OnTV">
    <requires>
      <import addon="xbmc.addon" version="12.0.0"/>
    </requires>
    <extension point="xbmc.addon.repository" name="OnTV Repository">
      <dir>
        <info compressed="false">https://raw.githubusercontent.com/nnllv0id/ontv-repo/main/addons.xml</info>
        <checksum>https://raw.githubusercontent.com/nnllv0id/ontv-repo/main/addons.xml.md5</checksum>
        <datadir zip="true">https://raw.githubusercontent.com/nnllv0id/ontv-repo/main</datadir>
      </dir>
    </extension>
    <extension point="xbmc.addon.metadata">
      <platform>all</platform>
      <summary lang="en">OnTV Repository</summary>
      <description lang="en">Official OnTV Repository</description>
    </extension>
  </addon>

  <addon id="plugin.video.ontv" name="OnTV" version="1.0.0" provider-name="OnTV">
    <requires>
      <import addon="xbmc.python" version="3.0.0"/>
    </requires>
    <extension point="xbmc.python.pluginsource" library="default.py">
      <provides>video</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
      <platform>all</platform>
      <summary lang="en">OnTV - IPTV Portal</summary>
      <description lang="en">IPTV portal with pre-configured servers.</description>
    </extension>
  </addon>

  <addon id="plugin.video.f4mTester" name="f4mTester" version="4.1.3" provider-name="Equipe Oneplay e Tiago">
    <requires>
      <import addon="xbmc.python" version="3.0.0"/>
      <import addon="script.module.six"/>
      <import addon="script.module.requests"/>
      <import addon="script.video.F4mProxy"/>
      <import addon="inputstream.ffmpegdirect"/>
      <import addon="script.module.flask"/>
      <import addon="script.module.netunblock"/>
    </requires>
    <extension point="xbmc.python.pluginsource" library="default.py">
      <provides>video</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
      <platform>all</platform>
      <summary lang="en">f4mTester</summary>
      <description lang="en">F4m stream tester and player.</description>
    </extension>
  </addon>

  <addon id="script.module.six" name="six" version="1.15.0+matrix.1" provider-name="gutworth">
    <requires>
      <import addon="xbmc.python" version="3.0.0"/>
    </requires>
    <extension point="xbmc.python.module" library="lib"/>
    <extension point="xbmc.addon.metadata">
      <platform>all</platform>
      <summary lang="en">Python 2 and 3 compatibility utilities.</summary>
    </extension>
  </addon>

  <addon id="script.module.requests" name="requests" version="2.27.1+matrix.1" provider-name="Python Software Foundation">
    <requires>
      <import addon="xbmc.python" version="3.0.0"/>
    </requires>
    <extension point="xbmc.python.module" library="lib"/>
    <extension point="xbmc.addon.metadata">
      <platform>all</platform>
      <summary lang="en">HTTP library for Python.</summary>
    </extension>
  </addon>

  <addon id="script.video.F4mProxy" name="F4mProxy" version="4.0.9" provider-name="Joel e Tiago">
    <requires>
      <import addon="xbmc.python" version="3.0.0"/>
      <import addon="script.module.requests"/>
      <import addon="inputstream.ffmpegdirect"/>
    </requires>
    <extension point="xbmc.python.module" library="lib"/>
    <extension point="xbmc.addon.metadata">
      <platform>all</platform>
      <summary lang="en">Proxy for f4m streams.</summary>
    </extension>
  </addon>

  <addon id="script.module.flask" name="Flask" version="2.1.3" provider-name="Joel">
    <extension point="xbmc.python.module" library="lib"/>
    <extension point="xbmc.addon.metadata">
      <platform>all</platform>
      <summary lang="en">Flask module for Kodi.</summary>
    </extension>
  </addon>

  <addon id="script.module.netunblock" name="Net Unblock" version="0.0.2" provider-name="Joel">
    <requires>
      <import addon="script.module.six"/>
      <import addon="script.module.requests"/>
    </requires>
    <extension point="xbmc.python.module" library="lib"/>
    <extension point="xbmc.addon.metadata">
      <platform>all</platform>
      <summary lang="en">DNS over HTTPS resolver for Kodi.</summary>
    </extension>
  </addon>

</addons>
