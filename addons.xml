<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>

  <addon id="repository.ontv"
         name="OnTV Repository"
         version="1.0.0"
         provider-name="OnTV">
    <requires>
      <import addon="xbmc.addon" version="12.0.0"/>
    </requires>
    <extension point="xbmc.addon.repository" name="OnTV Repository">
      <dir>
        <info compressed="false">https://nnllv0id.github.io/ontv-repo/addons.xml</info>
        <checksum>https://nnllv0id.github.io/ontv-repo/addons.xml.md5</checksum>
        <datadir zip="true">https://nnllv0id.github.io/ontv-repo/</datadir>
      </dir>
    </extension>
    <extension point="xbmc.addon.metadata">
      <summary lang="en">OnTV Repository</summary>
      <description lang="en">Official OnTV Repository</description>
      <platform>all</platform>
    </extension>
  </addon>

  <addon id="plugin.video.ontv"
         name="OnTV"
         version="1.0.0"
         provider-name="OnTV">
    <requires>
      <import addon="xbmc.python" version="3.0.0"/>
      <import addon="xbmc.gui"    version="5.14.0"/>
    </requires>
    <extension point="xbmc.python.pluginsource" library="default.py">
      <provides>video</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
      <summary lang="en">OnTV - IPTV Portal</summary>
      <summary lang="pt">OnTV - O Seu Portal IPTV</summary>
      <description lang="en">IPTV portal with multiple M3U servers and automatic group navigation.</description>
      <description lang="pt">Portal IPTV com múltiplos servidores M3U e navegação automática por grupos.</description>
      <platform>all</platform>
      <license>GNU GENERAL PUBLIC LICENSE v2</license>
      <news>v1.0.0 - Lançamento inicial</news>
    </extension>
  </addon>

</addons>
